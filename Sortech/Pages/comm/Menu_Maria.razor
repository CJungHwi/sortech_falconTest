@page "/comm/Menu_Maria"
@using MySqlConnector;
@*@using Syncfusion.Blazor;
@using Syncfusion.Blazor.Navigations;*@
@using Sortech.Model_MariaDB;
@inject IRepository_Menulist Menulist_service;

<div class="col-lg-12 control-section">
    <div class="content-wrapper">
        <div class="row">
            <SfTreeView @ref="Menu_sfView" TValue="Menulist">
                <TreeViewFieldsSettings DataSource="@menulist" Id="MenuId" ParentID="ParentMenuId" Text="MenuName"
                                        HasChildren="HasSubFolders" Expanded="Expanded" IconCss="Icon"></TreeViewFieldsSettings>
                <TreeViewEvents TValue="Menulist" NodeChecked="MenuClick"></TreeViewEvents>
            </SfTreeView>
        </div>
    </div>
</div>

@code {

    public SfTreeView<Menulist>? Menu_sfView;

    // 코드데이터 리스트
    private IEnumerable<Menulist>? menulist { get; set; } // 메뉴리스트 그리드 사용

    protected override void OnInitialized()
    {
        menulist = Menulist_service.MenuCall_SQL();
    }

    public void MenuClick(NodeCheckEventArgs args)
    {
        
    }
}